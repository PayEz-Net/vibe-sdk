{
  "name": "@vibe/next-plugin",
  "version": "0.1.0",
  "description": "Vibe Next.js plugin - Build-time type generation for @vibe/client",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "vibe": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run"
  },
  "keywords": [
    "vibe",
    "idealvibe",
    "nextjs",
    "plugin",
    "typescript",
    "codegen"
  ],
  "author": "PayEz",
  "license": "MIT",
  "peerDependencies": {
    "next": ">=14.0.0"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "next": "^14.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
